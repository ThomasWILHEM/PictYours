<UserControl x:Class="PictYours.UserListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictYours"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">

    <Border CornerRadius="10" BorderThickness="2" BorderBrush="LightBlue" Background="DarkSalmon">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Ellipse Width="60" Height="60" Margin="5">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/img/estelle_rond.png" Stretch="Uniform"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Text="Estelle" Foreground="White" VerticalAlignment="Center" FontSize="15" Grid.Column="1" TextWrapping="WrapWithOverflow"/>
        </Grid>
    </Border>


</UserControl>
