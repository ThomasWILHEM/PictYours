<UserControl x:Class="PictYours.UserListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PictYours"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="250">

    <StackPanel>
        <Border CornerRadius="10" BorderThickness="2" BorderBrush="LightBlue" Background="DarkSalmon">
            <DockPanel>
                <Image Source="img/user.png" DockPanel.Dock="Left" Margin="4" Width="60"/>
                <TextBlock Text="Estelle" Foreground="White" VerticalAlignment="Center" FontSize="15" DockPanel.Dock="Right" TextWrapping="WrapWithOverflow" Width="Auto"/>
            </DockPanel>
        </Border>
    </StackPanel>
    

</UserControl>
