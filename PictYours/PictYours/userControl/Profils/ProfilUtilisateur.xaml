<UserControl x:Class="PictYours.userControl.Profils.ProfilUtilisateur"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:PictYours.userControl.Profils"
             xmlns:converters="clr-namespace:PictYours.converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="root">
    <Grid DataContext="{Binding ElementName=root}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <converters:Pseudo2Affichage x:Key="Pseudo2Affichage"/>
            <converters:Utilisateur2PrenomNom x:Key="Utilisateur2PrenomNom"/>
        </Grid.Resources>

        <materialDesign:Card Margin="10,5,0,5">
            <Expander HorizontalAlignment="Stretch">
                <Expander.Header>
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <Ellipse Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="{Binding Utilisateur.PhotoDeProfil}"/>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding Utilisateur.Pseudo,Converter={StaticResource Pseudo2Affichage}}" Foreground="White" VerticalAlignment="Center" FontSize="24" Margin="5"/>
                        </StackPanel>
                    </DockPanel>
                </Expander.Header>
                <StackPanel Orientation="Vertical" Margin="20,10">
                    <TextBlock  TextWrapping="Wrap" Text="{Binding Utilisateur,Converter={StaticResource Utilisateur2PrenomNom}}"/>
                    <TextBlock TextWrapping="Wrap" Text="{Binding Utilisateur.Description}"/>
                </StackPanel>
            </Expander>
        </materialDesign:Card>


        <materialDesign:Card Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Margin="10,5,0,0">
            <ScrollViewer >
                <UniformGrid Columns="3" x:Name="mUniformGrid">
                    <UniformGrid.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                        <Style TargetType="Border">
                            <Setter Property="Margin" Value="15"/>
                            <Setter Property="CornerRadius" Value="20"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="BorderBrush" Value="DarkSalmon"/>
                        </Style>
                    </UniformGrid.Resources>
                </UniformGrid>
            </ScrollViewer>
        </materialDesign:Card>
    </Grid>
</UserControl>
